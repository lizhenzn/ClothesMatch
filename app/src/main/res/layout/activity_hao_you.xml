<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HaoYou.HaoYouActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            android:name="com.example.a74104.clothesmatch.HaoYou.HaoYouFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/haoYou_button_fragment"
            >
        </fragment>
        <fragment
            android:name="com.example.a74104.clothesmatch.HaoYou.ChatListFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/haoYou_list_fragment">
        </fragment>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>